{
  "scoutingTypes": {
    "prematch": {
      "name": "Pre-Match Scouting",
      "description": "Gather information on teams before matches",
      "tableName": "prematch_data",
      "fields": [
        {
          "id": "teamNumber",
          "label": "Team Number",
          "type": "number",
          "required": true,
          "placeholder": "e.g., 1234",
          "sortable": true
        },
        {
          "id": "robotPicture",
          "label": "Robot Picture",
          "type": "file",
          "required": false,
          "accept": "image/*"
        },
        {
          "id": "weight",
          "label": "Weight (lbs)",
          "type": "number",
          "required": false,
          "placeholder": "0",
          "sortable": true
        },
        {
          "id": "fuelCapacity",
          "label": "Fuel Capacity",
          "type": "number",
          "required": false,
          "placeholder": "0",
          "sortable": true
        },
        {
          "id": "climbLevel",
          "label": "Climb Level",
          "type": "select",
          "required": false,
          "options": ["L1", "L2", "L3", "None"],
          "sortable": true
        },
        {
          "id": "driveTrain",
          "label": "Drive Train Type",
          "type": "select",
          "required": false,
          "options": ["Tank", "Swerve", "Mecanum", "Omni", "Other"],
          "sortable": true
        },
        {
          "id": "trenchBump",
          "label": "Trench/Bump",
          "type": "select",
          "required": false,
          "options": ["Trench", "Bump"],
          "sortable": true
        },
        {
          "id": "cycleTime",
          "label": "Cycle Time",
          "type": "number",
          "required": false,
          "options": [],
          "sortable": true
        },
        {
          "id": "notes",
          "label": "Notes",
          "type": "textarea",
          "required": false,
          "placeholder": "Additional observations..."
        }
      ]
    },
    "match": {
      "name": "Match Scouting",
      "description": "Record data during matches",
      "tableName": "match_data",
      "fields": [
        {
          "id": "teamNumber",
          "label": "Team Number",
          "type": "number",
          "required": true,
          "placeholder": "e.g., 1234",
          "sortable": true
        },
        {
          "id": "matchNumber",
          "label": "Match Number",
          "type": "number",
          "required": true,
          "placeholder": "e.g., 1",
          "sortable": true
        },
        {
          "id": "alliance",
          "label": "Alliance",
          "type": "select",
          "required": true,
          "options": ["Red", "Blue"],
          "sortable": true
        },
        {
          "id": "autoPoints",
          "label": "Autonomous Points",
          "type": "number",
          "required": false,
          "placeholder": "0",
          "sortable": true
        },
        {
          "id": "teleopPoints",
          "label": "Teleop Points",
          "type": "number",
          "required": false,
          "placeholder": "0",
          "sortable": true
        },
        {
          "id": "notes",
          "label": "Notes",
          "type": "textarea",
          "required": false,
          "placeholder": "Additional observations..."
        }
      ]
    }
  }
}

